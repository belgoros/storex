<h1>Sign Up</h1>
<%= form_for @changeset, Routes.user_path(@conn, :create), fn f -> %>
  <%= label f, :full_name %>
  <%= error_tag f, :full_name %>
  <%= text_input f, :full_name %>

  <%= label f, :email %>
  <%= error_tag f, :email %>
  <%= email_input f, :email %>

  <%= label f, :password %>
  <%= error_tag f, :password %>
  <%= password_input f, :password %>
  <%= submit "Sign up", class: "button"%>
<% end %>
