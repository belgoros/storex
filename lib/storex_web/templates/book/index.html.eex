<table>
  <thead>
    <tr>
      <th width="200">Title</th>
      <th>Image URL</th>
      <th width="100">Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= for book <- @books do %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.image_url %></td>
        <td><%= format_price(book.price) %></td>
        <td><%= link "Show", to: Routes.book_path(@conn, :show, book.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
